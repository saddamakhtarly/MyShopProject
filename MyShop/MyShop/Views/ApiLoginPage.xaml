<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyShop.Views.ApiLoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="UserName" />
            <Entry x:Name="entryusername" Placeholder="Enter UserName" Text="{Binding UserName}" />
            <Label Text="Password" />
            <Entry x:Name="entryPassword" Placeholder="Enter Password" IsPassword="True" Text="{Binding Password}"/>
            <Button Text="Login" Command="{Binding LoginCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>